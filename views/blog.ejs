<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title><%= blog.title %> | Blog</title>
    <style>
      .blog-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
      }

      .blog-image {
        width: 100%;
        max-height: 400px;
        object-fit: contain;
        border-radius: 15px;
        display: block;
        margin: 0 auto;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
      }

      .blog-body {
        white-space: pre-wrap;
        font-size: 1.1rem;
        margin-top: 1.5rem;
        background: #f9f9f9;
        padding: 1.2rem;
        border-radius: 10px;
        line-height: 1.6;
      }

      .author-info img {
        border-radius: 50%;
        margin-right: 10px;
      }

      .comment-box {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        padding: 1rem;
        margin-bottom: 1rem;
      }

      .comment-box pre {
        background: #f1f3f5;
        padding: 0.75rem;
        border-radius: 10px;
        white-space: pre-wrap;
      }

      .comment-form input {
        margin-bottom: 0.5rem;
      }

      .comment-user img {
        border-radius: 50%;
        margin-right: 10px;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-5">
      <div class="card p-4 shadow-sm">
        <h1 class="blog-title"><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" class="blog-image mb-4" alt="Blog Image" />
        <div class="blog-body"><%= blog.body %></div>
        <div class="mt-4 d-flex align-items-center author-info">
            <img src="<%= blog.createdBy.profileImageURL %>" width="50" height="50" />
            <strong><%= blog.createdBy.fullName %></strong>
          </div>
        </div>
  
        <div class="mt-5">
          <h3>ðŸ’¬ Comments (<%= comments.length %>)</h3>
  
          <% if (locals.user) { %>
          <form action="/blog/comment/<%= blog._id %>" method="post" class="comment-form mt-3">
            <input
              type="text"
              name="content"
              class="form-control"
              placeholder="Write a comment..."
              required
            />
            <button class="btn btn-primary mt-2">Post Comment</button>
          </form>
          <% } else { %>
          <p class="text-muted">Please log in to comment.</p>
          <% } %>
  
          <div class="mt-4">
            <% comments.forEach(comment => { %>
            <div class="comment-box">
              <div class="d-flex align-items-center comment-user mb-2">
                <img src="<%= comment.createdBy.profileImageURL %>" width="40" height="40" />
                <strong><%= comment.createdBy.fullName %></strong>
              </div>
              <pre><%= comment.content %></pre>
            </div>
            <% }) %>
          </div>
        </div>
      </div>


    <%- include('./partials/script') %>
  </body>
</html>
